<%# -*- coding: utf-8 -*- -%>
<header>
  <a href="<%= top_path %>">
    <img src="<%= image_path("logo-small.png") %>"
         alt="Rabbit Slide Show">
  </a>

  <div id="search-form">
    <form action="<%= h("#{top_path}search/") %>" method="get">
      <input name="query"
             type="search"
             placeholder="<%= h(_("Input search keyword")) %>"
             value="<%= h(current_query) %>">
      <button type="submit">
        <span class="search-submit-button-label"><%= h(_("Search")) %></span>
      </button>
      <% current_tags.each do |tag| %>
      <input name="tags[]"
             type="hidden"
             value="<%= h(tag) %>">
      <% end %>
    </form>
  </div>
</header>
